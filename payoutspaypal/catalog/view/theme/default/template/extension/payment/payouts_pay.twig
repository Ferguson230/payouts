{% if testmode %}
<div class="warning">{{ text_testmode }}</div>
{% endif %}
<form action="{{ action }}" method="post" id="PayPalForm" name="PayPalForm">
 
  <input type="hidden" name="custom" value="{{ custom }}" />  
  <div class="buttons">
    <div class="pull-right">
      <input type="button" value="{{ button_confirm }}" onclick="paypal()"
        class="btn btn-primary" data-loading-text="{{ text_loading }}" />
    </div>
  </div>

</form>

<script>
  function paypal() {
    document.PayPalForm.submit();
  }
</script>
